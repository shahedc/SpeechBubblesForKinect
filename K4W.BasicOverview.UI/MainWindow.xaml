<Window x:Class="K4W.BasicOverview.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect v2 Speech Bubbles" Height="850" Width="1000" ResizeMode="NoResize" Icon="Resources/icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120px" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="100px" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10" Orientation="Horizontal">
            <Image Source="Resources/ms-logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="100" />
            <TextBlock Text="Kinect v2 Speech Bubbles!" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Margin="20,29,0,28" Foreground="#FF2A2A2A" />
            <TextBlock Text="By Shahed Chowdhuri @shahedC" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="10,43,0,30" Foreground="#FF2A2A2A" />
        </StackPanel>

        <!-- Seperator -->
        <Rectangle Grid.Row="1" Grid.ColumnSpan="2" Fill="#FF2A2A2A" />

        <!-- Kinect Output-->
        <Grid Grid.Row="2">

            <Grid x:Name="CameraGrid">

                <!-- Camera image -->
                <Image x:Name="CameraImage" Width="960" Height="540" />

                <!-- Skeletal mapping -->
                <Canvas x:Name="SkeletonCanvas" Width="960" Height="540" />
            </Grid>

            <!-- Depth -->
            <Grid x:Name="DepthGrid" Margin="20" Visibility="Collapsed">
                <Image x:Name="DepthImage" Width="960" Height="540" />
            </Grid>

            <!-- Infrared -->
            <Grid x:Name="InfraredGrid" Margin="20" Visibility="Collapsed">
                <Image x:Name="InfraredImage" Width="960" Height="540" />
            </Grid>
        </Grid>

        <!-- Seperator -->
        <Rectangle Grid.Row="3" Fill="#FF2A2A2A" />

        <!-- Navigation -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

